<Page x:Class="PizzaHouse.Metro.Views.Home" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480">
	<Page.Resources>
		<Style TargetType="HyperlinkButton">
			<Setter Property="Margin" Value="100,20,20,20"/>
			<Setter Property="Padding" Value="10"/>
			<Setter Property="HorizontalAlignment" Value="Left"/>
			<Setter Property="MinWidth" Value="300"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="Foreground" Value="#FFA91616"/>
		</Style>
	</Page.Resources>

    <StackPanel x:Name="LayoutRoot">
    	<HyperlinkButton Content="Place an Order" Tag="NotImplemented" Click="HyperlinkButton_Click" />
        <HyperlinkButton Content="Track your order" Tag="TrackOrders" Click="HyperlinkButton_Click" />
        <HyperlinkButton Content="Menus" Tag="NotImplemented" Click="HyperlinkButton_Click" />
        <HyperlinkButton Content="Locations" Tag="NotImplemented" Click="HyperlinkButton_Click" />
    </StackPanel>

</Page>